make-skewed-bg(x)
  transform: translate3d(0,0,0);
  &:before
    pb top left -50%
    left s('calc(-50% + %s)', x)
    size 100%
    transform skew(-15deg)
    transform-origin 0 0
    background-color $brand-c
    backface-visibility hidden
    z-index: -1


