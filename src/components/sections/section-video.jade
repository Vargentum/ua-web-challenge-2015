.onepage-section.s-video
  section.uv-section__container
    header
      h2.s-video__title Видео

    ul.s-video__list
      - i = 0
      while i < 2
        - i++
        - n = 1
        while n <= 4
          li.s-video__list__unit
            figure.s-video__preview
              - img = 'video-preview-' + n
              .s-video__preview__img-wrap
                +picture(img)
              figcaption.s-video__preview__caption Jean-Baptiste Guerrax
          - n++
