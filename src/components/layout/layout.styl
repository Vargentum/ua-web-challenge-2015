/*----------------------------------------
  Pre-header
----------------------------------------*/
.site-pre-header
  fixed right left top
  z-index: 1
  
  &__container
    container()
    hLine middle
    text-align right
    


/*----------------------------------------
  Header
----------------------------------------*/
.site-header
  position relative
  overflow hidden
  color darken($black-c, 50%)
  prevent-flicker()
  make-skewed-bg 325px
  
  
  &__header
    height inherit
    width 475px
    
    .flexbox &
      @extend .f-box
      @extend .f-dir--col
      @extend .f-align--1-2
    


  &__title
    text-transform: uppercase
    font-weight 900
    font-size 130px
    line-height: .75

    &__font-accent
      font-weight 100
      
    &__font-equal
      display block
      letter-spacing 3px


  &__time
    //inherited styles from &__title
    margin-left 5px
    font-size 40px
    font-weight 100
    text-transform: lowercase
    

  &__btn
    @extend .uv-btn
    @extend .uv-btn
    border-width 6px
    height 70px
    margin-y 60px
    

  &__cite
    color #7B6C03
    font-size 14px




/*----------------------------------------
  Nav
----------------------------------------*/
.site-nav
  $rt-align-val = s('calc((100% - %s) / 2)', $base-max-w)

  absolute right top
  width 100%
  height 100%
  background-color $black-c
  padding-right $rt-align-val

  .flexbox &
    @extend .f-box
    @extend .f-align--2-3
  
  .csstransforms &
    transform translateX(100%)
    
    &.is-active
      transform translateX(0)


  .no-csstransforms &
    left 100%
    
    &.is-active
      left auto
      right 0
      

  &__opener
    size 20px
    display inline-block
    background-color red
    cursor pointer
    

  &__list
    text-align right
    
  &__link
    display block
    font-size 36px
    font-weight 700
    color $white-c
    trans color

    &:hover
      color $brand-c      




/*----------------------------------------
  Footer
----------------------------------------*/
.site-footer
  // Tip:
  // &__wrap - outside
  // &__container - inside
  $h = 60px
  
  @extend .uv-section--black
  height $h
  color #555
  font-size 14px
  font-weight 200
  
  .flexbox &
    width 100%

    &__wrap
      @extend .f-box
      @extend .f-dir--col
      @extend .f-align--1-13


  .no-flexbox &
    margin-top -($h)
  
    &__wrap
      height inherit
  
      &__main
        height inherit
        padding-bottom: $h
          

  &__container
    height inherit
    container()
    .flexbox &
      @extend .f-box
      @extend .f-align--2-13
    .no-flexbox &
      jLine()


  &__copy
    hLine middle
    
    &__logo
      hide-text()
      sprite-retina $logo-copyright
      margin-x 10px



  &__social
    hLine middle 10px
    
    &__link
      hide-text()
      ctr-at 33px
      border-radius 50%
      background-color darken($black-c, 50%)
      color $white-c
      trans()
      
      &:before
        font-size 14px // font-size 0 at parent

      &:hover
        color $brand-c
        complex-transform('y', -3px)
    
  
  &__mail-link
    color $white-c
    
    &:hover
      text-decoration: underline
