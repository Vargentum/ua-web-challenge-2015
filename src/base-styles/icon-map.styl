@font-face 
  font-family: "ua-web-challenge-font";
  src: url('../fonts/ua-web-challenge-font.eot');
  src: url('../fonts/ua-web-challenge-font.eot?#iefix') format('eot'),
       url('../fonts/ua-web-challenge-font.woff') format('woff'),
       url('../fonts/ua-web-challenge-font.ttf') format('truetype'),
       url('../fonts/ua-web-challenge-font.svg#ua-web-challenge-font') format('svg');


.uv-icon
  &:before
    font-family: "ua-web-challenge-font";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-style: normal;
    font-variant: normal;
    font-weight: normal;
    text-decoration: none;
    text-transform: none;



.uv-icon--arrow-next
  @extend .uv-icon
  &:before 
    content: "\E001";

.uv-icon--arrow-prev
  @extend .uv-icon
  &:before 
    content: "\E002";

.uv-icon--close
  @extend .uv-icon
  &:before 
    content: "\E003";

.uv-icon--dinner
  @extend .uv-icon
  &:before 
    content: "\E004";

.uv-icon--menu
  @extend .uv-icon
  &:before 
    content: "\E005";

.uv-icon--play
  @extend .uv-icon
  &:before 
    content: "\E006";

.uv-icon--social-fb
  @extend .uv-icon
  &:before 
    content: "\E007";

.uv-icon--social-tw
  @extend .uv-icon
  &:before 
    content: "\E008";

.uv-icon--social-vk
  @extend .uv-icon
  &:before 
    content: "\E009";
